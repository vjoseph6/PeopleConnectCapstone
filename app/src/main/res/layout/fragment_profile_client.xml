<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Client.Fragments.ProfileFragmentClient">


    <!-- Header Background -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/green"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvMyProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/semibold_poppins"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- Profile Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/profile_image_background"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            app:shapeAppearanceOverlay="@style/CircularImageViewStyle" />
    </RelativeLayout>

    <!-- Profile Information -->
    <LinearLayout
        android:id="@+id/profile_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="26dp"
        android:background="@drawable/client_profileinformation_background"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- Name and Email -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joseph Lhee Villariasa"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:fontFamily="@font/bold_poppins"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vjosephlhee@gmail.com"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            android:fontFamily="@font/regular_poppins"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>

        <!-- Location and Booking Information -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/ivLocationIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/client_location"
                app:tint="@color/green"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mandaue, Cebu"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:fontFamily="@font/regular_poppins"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/ivBookingIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                app:tint="@color/green"
                android:src="@drawable/client_booking_bag"/>

            <TextView
                android:id="@+id/tvBookingCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2653 Request Booking Completed"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:fontFamily="@font/regular_poppins"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Menu Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Menu Item -->
        <LinearLayout
            android:id="@+id/profileMenuLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivProfileIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/client_myprofile"
                android:layout_marginEnd="16dp"
                app:tint="@color/green" />

            <TextView
                android:id="@+id/tvProfile__profile_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/regular_poppins"/>

        </LinearLayout>

        <!-- Location Menu Item -->
        <LinearLayout
            android:id="@+id/locationMenuLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:padding="12dp">

            <ImageView
                android:id="@+id/ivLocationIcon_profile_client"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/client_location"
                app:tint="@color/green" />

            <TextView
                android:id="@+id/tvLocation_profile_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular_poppins"
                android:text="Location"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Settings Menu Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivSettingsIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/client_settings"
                app:tint="@color/green"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/tvSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/regular_poppins"/>
        </LinearLayout>

        <!-- Logout Menu Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivLogoutIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/client_logout"
                app:tint="@color/green"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/regular_poppins"/>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>