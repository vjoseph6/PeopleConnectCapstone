<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="24dp"
    android:layout_marginHorizontal="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Rate"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/medium_poppins"/>

    <EditText
        android:id="@+id/etCurrentRate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="numberDecimal"
        android:enabled="false"
        android:background="@drawable/edit_text_rounded_corner"
        android:paddingHorizontal="16dp"
        android:textColor="@color/white"
        android:textColorHint="#80FFFFFF"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proposed Rate"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/medium_poppins"/>

    <EditText
        android:id="@+id/etNewRate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="numberDecimal"
        android:hint="Enter new rate"
        android:background="@drawable/edit_text_rounded_corner"
        android:paddingHorizontal="16dp"
        android:textColor="@color/white"
        android:textColorHint="#80FFFFFF"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAllCaps="false"
        android:background="@drawable/edit_text_rounded_corner"
        app:backgroundTint="@color/white"
        android:textColor="#59A52C"
        android:padding="12dp"
        android:fontFamily="@font/bold_poppins"/>
</LinearLayout>