<!-- res/drawable/thumbselector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/gray" /> <!-- White color for the thumb -->
            <size android:width="24dp" android:height="24dp"/> <!-- Set appropriate size -->
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#F2F0EF" /> <!-- White color for the thumb -->
            <size android:width="24dp" android:height="24dp"/> <!-- Same size for the thumb -->
        </shape>
    </item>
</selector>
