<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircularImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/green</item> <!-- Checked color -->
    </style>

    <style name="BottomNavigationView.CustomFontTextAppearance" parent="TextAppearance.AppCompat.Caption">

        <item name="android:fontFamily">@font/regular_poppins</item>
        <item name="android:textSize">12sp</item> <!-- Adjust text size as needed -->
        <item name="android:textColor">#000000</item> <!-- Optional: Change text color if needed -->
    </style>

    <style name="DialogAnimation" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>



</resources>